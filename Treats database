--Display the treats by Desserts

SELECT * FROM Sweet_Treats Where type_of_treat = "Dessert" ORDER BY price;

--What is the sum of the price of desserts

SELECT SUM(price) FROM Sweet_Treats;

--Display the treats by Snack

SELECT * FROM SWEET_TREATS WHERE type_of_treat= "Snack";
